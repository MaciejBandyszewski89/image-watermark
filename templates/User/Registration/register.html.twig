{% extends 'base.html.twig' %}
{% block body %}
    <style>
        body
        {
            background-image: url({{asset('background-7025417_1920.png')}});
            font-family: Arial, Helvetica, sans-serif;
            color: #030303;
            text-align: center;
            font-size: 30px;
            padding: 180px;
        }
        .email
        {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }
    </style>
    <div class="form">
        {{ form_start(form) }}
        <div class="email">{{ form_row(form.email) }}</div>
        <div class="first.password">{{ form_row(form.password.first) }}</div>
        <div class="second.password">{{ form_row(form.password.second) }}</div>
    </div>

    <button type="submit">Register!</button>

    {{ form_end(form) }}
{% endblock %}
