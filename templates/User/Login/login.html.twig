{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.massageKay|trans(error.massageData, 'security') }}</div>
    {% endif %}

    <style>
        body
        {
            background-image: url({{ asset('background-7025417_1920.png') }});
            font-family: Arial, Helvetica, sans-serif;
            color: #030303;
            font-size: 20px;
            padding: 250px;
        }

        #login
        {
            background-color: #04AA6D;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
        }
        #login:hover
        {
            opacity: 0.8;
        }
        #password
        {
            background-color: lightgray;
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }
        #username
        {
            background-color: lightgray;
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }
        .cancelbtn
        {
            width: auto;
            padding: 10px 18px;
            background-color: #f44336;
        }
        .container
        {
            padding: 16px;
        }

        span.psw
        {
            float: right;
            padding-top: 16px;
        }

        @media screen and (max-width: 300px) {
            span.psw {
                display: block;
                float: none;
            }
            .cancelbtn {
                width: 100%;
            }
        }
        #login:hover
        {
            opacity: 0.8;
        }
    </style>

    <form action="{{ path('user_login') }}" method="post">

        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/><br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"><br><br>

        <button id="login" type="submit">Login</button>

        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>

        <div class="container">
            <button type="button" class="cancelbtn">Cancel</button>
            <span class="psw">Forgot <a href="{{ path('resetPassword') }}">password?</a></span>
        </div>
    </form>

{% endblock %}

